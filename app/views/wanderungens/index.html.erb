<h1>Listing wanderungens</h1>

<%= search_form_for @search do |f| %>
	<div class="field">
		<%= f.label :schwierigkeitsgrad_code_gteq, "Schwierigkeitsgrad zwischen" %>
		<%= f.select :schwierigkeitsgrad_code_gteq, options_from_collection_for_select(Schwierigkeitsgrad.all, :code, :description), include_blank: true %>
		<%= f.label :schwierigkeitsgrad_code_lteq, "und" %>
		<%= f.select :schwierigkeitsgrad_code_lteq, options_from_collection_for_select(Schwierigkeitsgrad.all, :code, :description), include_blank: true %>
	</div>
		<div class="field">
		<%= f.label :zeitdauer_gteq, "Zeitbedarf zwischen" %>
		<%= f.number_field :zeitdauer_gteq, :step => 0.5 %>
		<%= f.label :zeitdauer_lteq, "und" %>
		<%= f.number_field :zeitdauer_lteq, :step => 0.5 %>
	</div>
	<div class="actions"><%= f.submit "Search" %></div>
<% end %>

<div id="wanderungens" class="transitions-enabled">
	<% @wanderungens.each do |wanderungen| %>
		<div class="box panel panel-default">
			<%= link_to image_tag(wanderungen.image.url(:medium)), wanderungen if wanderungen.image_file_name %>
			<div class="panel-body">
				<p><strong><%= wanderungen.description %></strong></p>
				<% if wanderungen.region %>
					<span class="glyphicon glyphicon-map-marker"></span>
					<%= wanderungen.region.description %>
				<% end %><br>
				<% if wanderungen.schwierigkeitsgrad %>
					<span class="glyphicon glyphicon-tag"></span>
					<%= wanderungen.schwierigkeitsgrad.description %>
				<% end %><br>
				<% if wanderungen.zeitdauer %>
					<span class="glyphicon glyphicon-time"></span>
					<%= wanderungen.zeitdauer %>Tage
				<% end %>			
				<% if wanderungen.upmeter %>
					<div class="pull-right">
						<span class="glyphicon glyphicon-arrow-up"></span>
						<%= wanderungen.upmeter %>m
					</div>
				<% end %>
				<% if wanderungen.downmeter %>
					<div class="pull-right index-padding-left">
						<span class="glyphicon glyphicon-arrow-down"></span>
						<%= wanderungen.downmeter %>m
					</div>
				<% end %>
				<p></p>
				<%= wanderungen.user.name if wanderungen.user %><br>
				<% if wanderungen.user == current_user %>
		        	<%= link_to edit_wanderungen_path(wanderungen) do %>
		        		<span class="glyphicon glyphicon-edit"></span>
		        		Bearbeiten
		        	<% end %>
		        	<%= link_to wanderungen, method: :delete, data: { confirm: 'Bist du sicher?' } do %>
		        		<span class="glyphicon glyphicon-trash"></span>
		        		LÃ¶schen
		        	<% end %>
		    	<% end %>
		    </div>
		</div>
	<% end %>
</div>

<br>

<% if user_signed_in? %>
	<%= link_to 'New Wanderungen', new_wanderungen_path %>
<% end %>
